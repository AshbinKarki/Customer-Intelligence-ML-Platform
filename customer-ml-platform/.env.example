# Environment Variables Template
# Copy this file to .env and fill in with your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/customer_ml
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=customer_ml

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_REGISTRY_URI=sqlite:///mlflow.db

# AWS Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_key_id
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=customer-ml-models

# GCP Configuration
GCP_PROJECT_ID=your-project
GCP_REGION=us-central1

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin

# Environment
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO
